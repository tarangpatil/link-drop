generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  sentInvites     Invite[] @relation("sender_invites")
  receivedInvites Invite[] @relation("receiver_invites")

  chatAsA DropChat[] @relation("ChatA")
  chatAsB DropChat[] @relation("ChatB")

  sentDrops     Drop[] @relation("sent_drops")
  receivedDrops Drop[] @relation("received_drops")
}

model Invite {
  senderId Int
  sender   User @relation("sender_invites", fields: [senderId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  receiverId Int
  receiver   User @relation("receiver_invites", fields: [receiverId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  sentAt DateTime @default(now())

  @@id([senderId, receiverId])
  @@index([senderId])
  @@index([receiverId])
}

model DropChat {
  userAId Int
  userBId Int

  userA User @relation("ChatA", fields: [userAId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userB User @relation("ChatB", fields: [userBId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([userAId, userBId])
}

model Drop {
  senderId   Int
  receiverId Int
  sentAt     DateTime @default(now())

  sender   User @relation("sent_drops", fields: [senderId], references: [id])
  receiver User @relation("received_drops", fields: [receiverId], references: [id])

  dropText String

  @@id([senderId, receiverId, sentAt])
  @@index([senderId])
  @@index([receiverId])
}
